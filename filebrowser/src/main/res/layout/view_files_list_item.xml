<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="64dp">

	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_insert_drive_file_black_48dp"
			android:id="@+id/fsItemIcon"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="8dp"
			android:layout_marginLeft="8dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp"
			tools:ignore="RtlHardcoded" />

	<TextView
			android:text="Filename"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/filename"
			app:layout_constraintLeft_toRightOf="@+id/fsItemIcon"
			android:layout_marginLeft="8dp"
			app:layout_constraintTop_toTopOf="@+id/fsItemIcon"
			android:layout_marginTop="0dp"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			tools:ignore="HardcodedText,RtlHardcoded" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/lastModified"
			app:layout_constraintLeft_toRightOf="@+id/fsItemIcon"
			android:layout_marginLeft="8dp"
			app:layout_constraintBottom_toBottomOf="@+id/fsItemIcon"
			android:layout_marginBottom="0dp"
			android:text="01.01.1970"
			tools:ignore="HardcodedText,RtlHardcoded" />

	<TextView
			android:text="12.3 kB"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/size"
			android:layout_marginRight="8dp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="@+id/fsItemIcon"
			android:layout_marginBottom="0dp"
			tools:ignore="HardcodedText,RtlHardcoded" />

</android.support.constraint.ConstraintLayout>